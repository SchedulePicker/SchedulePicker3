{
  "name": "schedulepicker3",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "run-p build:* -- --no-content-hash --no-source-maps --no-cache --detailed-report 0",
    "build:chrome": "parcel build static/chrome/manifest.json --dist-dir dist/chrome --no-cache",
    "build:firefox": "parcel build static/firefox/manifest.json --dist-dir dist/firefox --no-cache",
    "lint": "run-p lint:*",
    "lint-fix": "run-p 'lint:* -- --fix'",
    "lint:js": "xo",
    "test": "jest",
    "test-ci": "TZ=Asia/Tokyo jest",
    "watch:chrome": "parcel watch static/chrome/manifest.json --dist-dir dist/chrome",
    "watch:firefox": "parcel watch static/firefox/manifest.json --dist-dir dist/firefox",
    "format": "prettier --loglevel warn --write .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/SchedulePicker/SchedulePicker3.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SchedulePicker/SchedulePicker3/issues"
  },
  "homepage": "https://github.com/SchedulePicker/SchedulePicker3#readme",
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version"
  ],
  "xo": {
    "space": 4,
    "prettier": true,
    "rules": {
      "unicorn/prevent-abbreviations": "off",
      "capitalized-comments": "off",
      "no-alert": "off",
      "unicorn/no-array-reduce": "off"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "dependencies": {
    "dayjs": "^1.10.7",
    "dompurify": "^2.3.3",
    "garoon-soap": "^0.1.12",
    "nanoid": "^3.1.30",
    "reset-css": "^5.0.1",
    "typescript": "^4.4.4",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.1",
    "@parcel/transformer-image": "^2.0.1",
    "@parcel/transformer-sass": "^2.0.1",
    "@types/dompurify": "^2.3.1",
    "@types/jest": "^27.0.2",
    "@types/webextension-polyfill": "^0.8.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "mockdate": "^3.0.5",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "web-ext-types": "^3.2.1",
    "xo": "^0.46.4"
  },
  "lint-staged": {
    "*.{js,scss,md,ts,tsx}": [
      "prettier --write",
      "xo --fix"
    ]
  }
}
