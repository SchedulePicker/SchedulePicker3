{
    "name": "SchedulePicker",
    "version": "3.3.1",
    "description": "You can easily insert Garoon scheduled events to a text editor on kintone.",
    "homepage_url": "https://github.com/SchedulePicker/SchedulePicker3#readme",
    "manifest_version": 2,
    "icons": {
        "16": "../icons/logo_16.png",
        "48": "../icons/logo_48.png",
        "128": "../icons/logo_128.png"
    },
    "permissions": [
        "background",
        "contextMenus",
        "storage",
        "https://*.cybozu.com/k/*",
        "https://*.cybozu-dev.com/k/*",
        "https://*.kintone.com/k/*",
        "https://*.kintone-dev.com/k/*",
        "https://*.cybozu.cn/k/*",
        "https://*.cybozu-dev.cn/k/*"
    ],
    "options_ui": {
        "chrome_style": false,
        "page": "../options.html"
    },
    "background": {
        "scripts": ["../../src/background.ts"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.cybozu.com/k/*",
                "https://*.cybozu-dev.com/k/*",
                "https://*.kintone.com/k/*",
                "https://*.kintone-dev.com/k/*",
                "https://*.cybozu.cn/k/*",
                "https://*.cybozu-dev.cn/k/*"
            ],
            "js": ["../../src/content-script.ts"],
            "run_at": "document_end"
        }
    ]
}
