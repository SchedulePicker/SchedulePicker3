{
    "name": "SchedulePicker",
    "version": "3.3.2",
    "default_locale": "en",
    "description": "You can easily insert Garoon scheduled events to a text editor on kintone.",
    "homepage_url": "https://github.com/SchedulePicker/SchedulePicker3#readme",
    "manifest_version": 2,
    "browser_specific_settings": {
        "gecko": {
            "id": "SchedulePicker@gecko.com"
        }
    },
    "icons": {
        "16": "icons/logo_16.png",
        "48": "icons/logo_48.png",
        "128": "icons/logo_128.png"
    },
    "permissions": [
        "contextMenus",
        "storage",
        "https://*.cybozu.com/*",
        "https://*.cybozu-dev.com/*",
        "https://*.kintone.com/*",
        "https://*.kintone-dev.com/*",
        "https://*.cybozu.cn/*",
        "https://*.cybozu-dev.cn/*"
    ],
    "options_ui": {
        "page": "options.html"
    },
    "background": {
        "scripts": ["../src/background.ts"]
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.cybozu.com/*",
                "https://*.cybozu-dev.com/*",
                "https://*.kintone.com/*",
                "https://*.kintone-dev.com/*",
                "https://*.cybozu.cn/*",
                "https://*.cybozu-dev.cn/*"
            ],
            "js": ["../src/content-script.ts"],
            "run_at": "document_end"
        }
    ]
}
